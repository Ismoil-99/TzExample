<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_base"
    app:startDestination="@id/flowMainFragment">

    <fragment
        android:id="@+id/flowMainFragment"
        android:name="com.example.tzexample.presentation.ui.main.FlowMainFragment"
        tools:layout="@layout/fragment_flow_main"
        android:label="FlowMainFragment" />
    <fragment
        android:id="@+id/flowAuthFragment"
        android:name="com.example.tzexample.presentation.ui.auth.FlowAuthFragment"
        android:label="@string/sing_in"
        tools:layout="@layout/fragment_flow_auth"
        />
    <fragment
        android:id="@+id/addAnnouncedFragment2"
        android:name="com.example.tzexample.presentation.ui.main.add.addannounced.AddAnnouncedFragment"
        android:label=""
        tools:layout="@layout/fragment_add_announced" />

    <action
        android:id="@+id/to_flow_auth"
        app:destination="@+id/flowAuthFragment"
        app:enterAnim="@anim/from_right"
        app:exitAnim="@anim/to_left"
        app:popEnterAnim="@anim/from_left"
        app:popExitAnim="@anim/to_right" />

    <action
        android:id="@+id/to_add_announced"
        app:destination="@+id/addAnnouncedFragment2"
        app:popUpTo="@+id/flowAuthFragment"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/to_main"
        app:destination="@+id/flowMainFragment"
        app:popUpToInclusive="true"
        app:launchSingleTop="true"
        />
</navigation>