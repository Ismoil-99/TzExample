<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TzExample" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.TzExample" parent="Base.Theme.TzExample" />
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="CustomBottomSheetStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>
</resources>