<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.main.more.MoreFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:background="@drawable/radius"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">
        <RelativeLayout
            android:id="@+id/box_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_margin="15dp"
                android:src="@drawable/baseline_account_circle" />

            <TextView
                android:id="@+id/icon_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/imageView1"
                android:text="@string/profile" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/imageView1"
                android:layout_alignStart="@+id/icon_text"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@color/grey" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/box_announced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_margin="15dp"
                android:src="@drawable/baseline_format_list_bulleted" />

            <TextView
                android:id="@+id/icon_text_announced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/imageView2"
                android:text="@string/my_announced_text" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/imageView2"
                android:layout_alignStart="@+id/icon_text_announced"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@color/grey" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/box_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_margin="15dp"
                android:src="@drawable/baseline_settings" />

            <TextView
                android:id="@+id/icon_text_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/imageView"
                android:text="@string/settings_text" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/imageView"
                android:layout_alignStart="@+id/icon_text_settings"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:background="@color/grey" />

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>