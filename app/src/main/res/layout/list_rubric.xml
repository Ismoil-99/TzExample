<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ramka_for_filtr"
    >

    <ImageView
        android:id="@+id/icons_rubric"
        android:layout_width="45dp"
        android:layout_height="45dp"
        tools:src="@drawable/baseline_search"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/name_rubric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_toStartOf="@+id/icons_rubric"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="14dspfmsdpoknfgfdsgoiwhefolmvsd" />
</RelativeLayout>