<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp"
    android:layout_weight="1"
    android:gravity="center"
    android:background="@drawable/ramka_for_filtr"
    >


    <ImageView
        android:id="@+id/icons_rubric"
        android:layout_width="35dp"
        android:layout_height="35dp"
        tools:src="@drawable/baseline_search"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:id="@+id/name_rubric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="31dp"
        android:layout_toStartOf="@+id/icons_rubric"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="14dspfmsdpoknfgfdsgoiwhefolmvsd" />
</RelativeLayout>