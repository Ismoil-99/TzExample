<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/box_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >
        <ImageView
            android:id="@+id/icon_announced"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            tools:src="@drawable/error_image"
            />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/title_announced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/box_image"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="qe32eqweedasf1232132112421132312sadasd" />
    <TextView
        android:id="@+id/price_announced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#424649"
        tools:text="2222222 1323"
        android:layout_gravity="start"
        android:layout_below="@+id/title_announced"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        />
    
</RelativeLayout>